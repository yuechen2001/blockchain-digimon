# Deployment Environment
# Controls which configuration from deploy-config.js is used
DEPLOY_ENV=development # Options: development, test, production

# Blockchain-related API Keys
MORALIS_API_KEY=your_moralis_api_key_here
PRIVATE_KEY=your_wallet_private_key_here
MORALIS_NODE_URL=your_moralis_node_url_here
ETHERSCAN_API_KEY=your_etherscan_api_key_here
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# IPFS Storage (Pinata)
PINATA_API_KEY=your_pinata_api_key_here
PINATA_API_SECRET=your_pinata_secret_here

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_TRUST_HOST=true
NEXTAUTH_URL=http://localhost:3000

# Database Configuration
# Pre-configure database URL to point to development DB (SQLite)
DATABASE_URL=file:./prisma.db
SQLITE_DATABASE_URL=file:./prisma.db
POSTGRES_DATABASE_URL=postgres://username:password@host:port/database?pgbouncer=true&sslmode=require
# Direct connection to the database. Used for migrations.
DIRECT_URL=postgres://username:password@host:port/database?sslmode=require

# Redis Configuration
REDIS_URL=redis://username:password@host:port

# Gas Optimization
REPORT_GAS=true

# Frontend Contract Configuration
NEXT_PUBLIC_DIGIMON_TOKEN_ADDRESS=0xYourTestnetTokenAddress
NEXT_PUBLIC_DIGIMON_MARKETPLACE_ADDRESS=0xYourTestnetMarketplaceAddress
NEXT_PUBLIC_NETWORK_NAME=localhost
# Uncomment for mainnet deployment
# NEXT_PUBLIC_DIGIMON_TOKEN_ADDRESS=0xYourMainnetTokenAddress
# NEXT_PUBLIC_DIGIMON_MARKETPLACE_ADDRESS=0xYourMainnetMarketplaceAddress
# NEXT_PUBLIC_NETWORK_NAME=mainnet